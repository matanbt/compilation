/// illegal_inheritence
class A extends A {
	int i;
}

***ERROR(1)


/// illegal_array_comparing
class A {
	int i;
}

class B extends A {
	int i;
}

array ArrA = A[];
array ArrB = B[];

ArrA a := new B[5];
ArrA aOrig := new A[5];

ArrB b := new B[5];

int booli1 := (a = a);
int booli2 := (a = aOrig);
int booli3 := (a = b);  // illegal

***ERROR(17)



/// error_when_trying_to_assign_void
void foo(int i, string j) {
	return;
}
string j;
int i;
int k := foo(i, j);

***ERROR(6)