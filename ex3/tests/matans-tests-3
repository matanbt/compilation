/// new_array__test_1
class A {
	int i;
}

class B extends A {
	int i;
}

array ArrA = A[];
ArrA arr := new B[5]; // legal

***OK


/// new_array__test_2
class A {
	int i;
}

class B extends A {
	int i;
}

class C extends B {
	int i;
}

array ArrA = A[];
ArrA arr := new C[5]; // legal

***OK


